<filter <%= @pattern %>>
  <% @config.sort_by{|key,val|key}.each do |key, val| -%>
    <% if val.is_a?( Hash ) -%>
      <<%= key %>>
      <% val.sort_by{|key2,val2|key2}.each do |key2, val2| -%>
        <%= key2 %> <%= val2 %>
      <% end -%>
      </<%= key %>>
    <% else -%>
    <%= key %> <%= val %>
    <% end -%>
  <% end -%>
</filter>
